<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0F5E6D3" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <!-- Soft shadow effect (dark shadow) -->
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_dark" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <!-- Light shadow effect (highlight) -->
    <item
        android:top="3dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_light" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <!-- Main content with inner shadow -->
    <item
        android:bottom="5dp"
        android:top="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0F5E6D3" />
            <corners android:radius="28dp" />
            <!-- Inner shadow effect -->
            <stroke
                android:width="1dp"
                android:color="@color/shadow_dark" />
        </shape>
    </item>
</layer-list>

