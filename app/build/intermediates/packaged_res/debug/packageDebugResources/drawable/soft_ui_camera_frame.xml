<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer frame with soft shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_brown" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Dark shadow -->
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_dark_strong" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Light shadow (highlight) -->
    <item
        android:top="3dp"
        android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_light" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Inner frame -->
    <item
        android:bottom="6dp"
        android:top="6dp"
        android:left="6dp"
        android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_brown" />
            <corners android:radius="20dp" />
            <!-- Inner shadow effect -->
            <stroke
                android:width="1dp"
                android:color="@color/shadow_dark" />
        </shape>
    </item>
</layer-list>

